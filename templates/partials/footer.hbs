    <div class="container p-2">
        <marquee scrolldelay="1" onMouseOver="this.stop()" onMouseOut="this.start()">
            <!-- Section: Iframe -->
            <section class="">

                <div class="row d-flex justify-content-center">

                    <div class="col-lg-6">
                        <div class="ratio ratio-16x9">

                            {{#each show_props}}
                            <iframe class="shadow-1-strong rounded mx-2"  style="position: relative; width: 20vmin width: 30vw; overflow: hidden;"
                                src="https://www.youtube.com/embed/{{this.link}}" title="YouTube video"
                                allowfullscreen></iframe>
                            {{/each}}
                        </div>
                    </div>
                </div>

            </section>
            <!-- Section: Iframe -->
        </marquee>

    </div>
    {{/if}}

